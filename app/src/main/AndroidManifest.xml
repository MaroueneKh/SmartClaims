<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marouenekhadhraoui.smartclaims">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".SmartClaimsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_smart_claims2_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_smart_claims2_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartClaims"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.marouenekhadhraoui.smartclaims.ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marouenekhadhraoui.smartclaims.ui.splash.SecondSplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartClaims"></activity>
        <activity
            android:name="com.marouenekhadhraoui.smartclaims.ui.signin.SignInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartClaims"></activity>
        <activity
            android:name="com.marouenekhadhraoui.smartclaims.ui.signup.SignUPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartClaims"></activity>
        <activity
            android:name="com.marouenekhadhraoui.smartclaims.ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartClaims" />
        <activity
            android:name="com.marouenekhadhraoui.smartclaims.ui.mot_de_passe_oublie.RecuperationMotDePasseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartClaims" />
        <activity
            android:name="com.marouenekhadhraoui.smartclaims.ui.mot_de_passe_oublie.EnvoyerRequeteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartClaims" />
    </application>


</manifest>