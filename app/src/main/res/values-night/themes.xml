<resources>
    <!-- Base application theme. -->
    <style name="Theme.SmartClaims" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/backgroundblack</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/backgroundblack</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/backgroundblack</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
    </style>
</resources>