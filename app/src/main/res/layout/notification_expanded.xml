<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notif_view_time"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/black"
    android:elevation="3dp">

    <ImageButton
        android:id="@+id/notif_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_timer_blue" />

    <TextView
        android:id="@+id/notif_txt_timeclock_chrono"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notif_play_pause_button"
        app:layout_constraintStart_toEndOf="@+id/notif_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</LinearLayout>